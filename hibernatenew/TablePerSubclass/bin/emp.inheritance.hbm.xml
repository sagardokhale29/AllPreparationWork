<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.seed.emp">
<class name="Employee" table="EMPLOYEEMASTER_sss" >
<id name="empId" type="int" column="EMPID">
<generator class="assigned">
</generator>
</id>
<property name="name" column="NAME"/>
<joined-subclass name="WageEmployee" table="WEmpSBsss">
<key column="WEid"/>
<property name="Hours"/>
<property name="Rate"/>
</joined-subclass>
<joined-subclass name="SalesPerson" table="SEmpSBsss">
<key column="spid"/>
<property name="Sales"/>
<property name="Commisions"/>
</joined-subclass>
 
</class>
 


</hibernate-mapping>
